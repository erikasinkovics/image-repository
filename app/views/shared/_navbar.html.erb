<div class="navbar navbar-expand-sm navbar-light navbar-image-repo">
  <% if user_signed_in? %>
    <%= link_to new_user_image_path(current_user), class: "upload-image" do %>
      <i class="fas fa-upload"></i>
    <% end %>
  <% else %>
    <div>
      <%= link_to "Sign in", new_user_session_path %><%= " to upload an image" %>
    </div>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Browse Repository", user_images_path(current_user), class: "nav-link" %>
        </li>
        <li class="nav-item active">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn-rose" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "btn-blue" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
