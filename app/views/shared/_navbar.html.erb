<div class="navbar navbar-expand-sm navbar-light navbar-image-repo">
  <div class="navbar-left">
    <%= link_to "Image Repository", root_path, class: "nav-home" %>
    <%= link_to "Explore", images_path, class: "nav-link" %>
  </div>

  <div class="navbar-search">
    <div class="input-group mb-2 search-box">
      <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-default">
      <div class="input-group-prepend">
        <span class="input-group-text" id="inputGroup-sizing-default">Search</span>
      </div>
    </div>
  </div>



  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to new_user_image_path(current_user), class: "upload-image" do %>
            <i class="fas fa-upload"></i>
          <% end %>
        </li>
        <li class="nav-item">
          <%= link_to "My Gallery", user_images_path(current_user), class: "nav-link" %>
        </li>

        <li class="nav-item active">
          <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "btn-rose" %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in", new_user_session_path %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", new_user_registration_path, class: "btn-white-md" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
